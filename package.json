  "lint-staged": {
    "package.json": [
      "fixpack"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "mongo-realm/functions/**/*.ts": [
      "eslint -c .eslintrc --fix"
    ]
  },
  "main": "src/index.tsx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fanzone-media/fanzone.git"
  },
  "scripts": {
    "build": "npm run build:appflow",
    "build:appflow": "BUILD_PATH=mongo-realm/hosting/files ionic build",
    "build:local": "npm run build:realm && npm run build:react",
    "build:modules": "cd mongo-realm && tar -czf node_modules.tar.gz node_modules && mv node_modules.tar.gz ./functions && cd -",
    "build:react": "BUILD_PATH=mongo-realm/hosting/files ionic build",
    "build:realm": "mongo-realm/node_modules/.bin/webpack --config mongo-realm/webpack.config.js",
    "fix:lint": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "fix:pkgjson": "fixpack",
    "inspect:all": "concurrently -s -c \"bgBlue.bold,bgMagenta.bold,yellow\" \"npm:inspect:lint\" \"npm:inspect:vulnerabilities\" \"npm:inspect:outdated\" \"npm:inspect:circular-deps\"",
    "inspect:circular-deps": "dpdm --warning false --tree false --exit-code circular:1 src/index.tsx",
    "inspect:complexity": "exit 0",
    "inspect:lint": "fixpack && eslint \"src/**/*.{js,jsx,ts,tsx}\" \"mongo-realm/functions/**/*.ts\"",
    "inspect:outdated": "ncu --timeout 120000 --packageFile package.json",
    "inspect:test": "npm run test:all",
    "inspect:vulnerabilities": "npm audit",
    "messages:compile": "formatjs compile src/translations/simple/$npm_config_locale.json --ast --format simple --out-file src/translations/compiled/$npm_config_locale.json",
    "messages:extract": "npm run messages:extract:raw && npm run messages:extract:simple",
    "messages:extract:raw": "formatjs extract 'src/**/*.{js,jsx,ts,tsx}' --out-file src/translations/raw/$npm_config_locale.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "messages:extract:simple": "formatjs extract 'src/**/*.{js,jsx,ts,tsx}' --out-file src/translations/simple/$npm_config_locale.json --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format simple",
    "postbuild:local": "git add mongo-realm/hosting/files mongo-realm/functions && HUSKY=1 git commit -n -m 'ci: automated build' || exit 0",
    "postinstall": "npx husky install && cd node_modules/.bin && mv react-scripts react-scripts-real && ln -s ../react-app-rewired/bin/index.js react-scripts && cd ../../",
    "prebuild:local": "npm run build:modules && npm run inspect:all",
    "prebuild:modules": "rm -rf functions/node_modules.tar.gz",
    "start": "npm run start:local",
    "start:local": "react-scripts start",
    "test": "npm run test:all",
    "test:all": "npm run test:react && npm run test:realm",
    "test:data": "export $(cat .env.local | xargs) && export TS_NODE_COMPILER_OPTIONS='{\"isolatedModules\":false}' && ./node_modules/ts-node/dist/bin-script.js test/createTestData.ts",
    "test:react": "react-scripts test --watchAll=false --passWithNoTests=true",
    "test:realm": "jest -c mongo-realm/jest.config.js",
    "upgrade": "ncu -u --timeout 120000 && npm i --legacy-peer-deps && ncu -u --packageFile ./mongo-realm/package.json && cd ./mongo-realm && npm i --legacy-peeer-deps && cd .."
  }
}
